{% block field_label %}
	{%- spaceless -%}
		{%- set attr = attr|merge({ 'class': attr.class|default('') ~ ' control-label'}) -%}
	    <label for="{{- id -}}" {{ block('widget_attributes') -}}>{{- label|raw -}}
		{%- if required -%}
			<span style="color:#f00;" title="{{- 'ccdn_forum_admin.form.field.required' |trans({}, 'CCDNForumAdminBundle') -}}">*</span>
		{%- endif -%}
		</label>
	{%- endspaceless -%}
{% endblock field_label %}



{% block field_widget %}
	{%- spaceless -%}
	    {%- set type = type|default('text') -%}
		{%- set attr = attr|merge({ 'class': attr.class|default('') ~ ' input-xlarge span8'}) -%}
	    <input type="{{- type -}}" value="{{- value -}}" {{ block('widget_attributes') -}}>
	{%- endspaceless -%}
{% endblock field_widget %}



{% block textarea_widget %}
	{%- spaceless -%}
		{%- set attr = attr|merge({ 'class': attr.class|default('') ~ ' text-xlarge span8', 'style': attr.style|default('') ~ 'height:250px;'}) -%}
	    <textarea {{ block('widget_attributes') -}}>{{- value -}}</textarea>
	{%- endspaceless -%}
{% endblock textarea_widget %}



{% block field_errors %}{# errors for next to each field #}
    {%- spaceless -%}
        {%- if errors|length > 0 -%}
            <div class="alert alert-error span8">
                <ul>
                    {%- for error in errors -%}
                        <li>
                            {{
                            error.messagePluralization is null
                            ? error.messageTemplate|trans(error.messageParameters, 'validators')
                            : error.messageTemplate|transchoice(error.messagePluralization, error.messageParameters, 'validators')
                            }}
                        </li>
                    {%- endfor -%}
                </ul>
            </div>
        {%- endif -%}
    {%- endspaceless -%}
{% endblock field_errors %}



{% block form_errors %}{# for the overall form #}
    {%- spaceless -%}
        {%- if errors|length > 0 -%}
            <div class="alert alert-error span8">
                <ul>
                    {%- for error in errors -%}
                        <li>{{
                            error.messagePluralization is null
                            ? error.messageTemplate|trans(error.messageParameters, 'validators')
                            : error.messageTemplate|transchoice(error.messagePluralization, error.messageParameters, 'validators')
                            }}<hr>
                        </li>
                    {%- endfor -%}
                </ul>
            </div>
        {%- endif -%}
    {%- endspaceless -%}
{% endblock form_errors %}


{% block choice_widget %}
    {% spaceless %}
        {% if expanded %}
            {%- set attr = attr|merge({'class': attr.class|default('') ~ ' span8'}) -%}
            <div {{ block('widget_container_attributes') }}>
                <table class="table table-condensed">
                    <tbody>
                    {% for child in form %}
                        <tr>
                            <td>{{ form_widget(child) }}</td>
                            <td>{{ form_label(child) }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <select {{ block('widget_attributes') }}{% if multiple %} multiple="multiple"{% endif %}>
                {% if empty_value is not none %}
                    <option value="">{{ empty_value|trans }}</option>
                {% endif %}
                {% if preferred_choices|length > 0 %}
                    {% set options = preferred_choices %}
                    {{ block('widget_choice_options') }}
                    {% if choices|length > 0 %}
                        <option disabled="disabled">{{ separator }}</option>
                    {% endif %}
                {% endif %}
                {% set options = choices %}
                {{ block('widget_choice_options') }}
            </select>
        {% endif %}
    {% endspaceless %}
{% endblock choice_widget %}