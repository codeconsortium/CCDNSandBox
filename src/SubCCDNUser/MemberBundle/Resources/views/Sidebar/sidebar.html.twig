{%- spaceless -%}
	{%- set route = app.request.attributes.get('_route') -%}

	<li class="nav-header">
		{{- 'sidebar.header.navigation' | trans({}, 'CCDNUserMemberBundle') -}}
	</li>
	
	<li class="active">
		<a href="{{- path('ccdn_user_member_index') -}}">
			<i class="icon-white icon-th-list"></i>
			{{- 'link.members' |trans({}, 'CCDNUserMemberBundle') -}}
		</a>
	</li>
	
	{%- if is_granted("ROLE_USER") -%}
		<li>
			<a rel="nofollow" href="{{- path('ccdn_user_user_account_show') -}}">
				<i class="icon-cog"></i>
				{{- 'link.account.view' |trans({}, 'CCDNUserMemberBundle') -}}
			</a>
		</li>
		<li>
			<a rel="nofollow" href="{{- path('ccdn_user_profile_show') -}}">
				<i class="icon-user"></i>
				{{- 'link.profile.view' | trans({}, 'CCDNUserMemberBundle') -}}
			</a>
		</li>
	{%- else -%}
		<li>
			<a rel="nofollow" href="{{- path('fos_user_security_login') -}}">
				<i class="icon-user"></i>
				{{- 'link.login' |trans({}, 'CCDNUserUserBundle') -}}
			</a>
		</li>
		<li>
			<a rel="nofollow" href="{{- path('fos_user_registration_register') -}}">
				<i class="icon-asterisk"></i>
				{{- 'link.register' |trans({}, 'CCDNUserUserBundle') -}}
			</a>
		</li>
		<li>
			<a rel="nofollow" href="{{- path('fos_user_resetting_request') -}}">
				<i class="icon-lock"></i>
				{{- 'link.reset' |trans({}, 'CCDNUserUserBundle') -}}
			</a>
		</li>
	{%- endif -%}

{%- endspaceless -%}
