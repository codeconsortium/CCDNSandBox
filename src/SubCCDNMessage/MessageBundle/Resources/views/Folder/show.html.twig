{% endblock %}


{% block body_content %}

	{%- spaceless -%}

		<section>
			<form method="POST" action="{{- path('ccdn_message_message_folder_mail_bulk_action', {'folderName': current_folder.getName()}) -}}" class="form-inline" data-checkboxes>
				<input type="hidden" id="submit_action" name="submit[]" value="">

				<div class="btn-toolbar">
					<div class="span6">
						
						{%- include 'CCDNMessageMessageBundle:Toolbar:folder_actions.html.twig' -%}

					</div>

					{%- if pager.haveToPaginate -%}
						<nav class="span6 btn-right paginate">
					    	{{- pagerfanta(pager, 'twitter_bootstrap_compact', {'routeName': 'ccdn_message_message_folder_show_paginated', 'routeParams':{'folder_name':current_folder.getName} }) -}}
						</nav>
					{%- endif -%}
				</div>

				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th style="width: 16px;">
								<input type="checkbox" id="check_all" name="check_all" class="collapse hidden" data-master-checkbox="1" data-js-compat>
							</th>
							<th style="width: 16px;"><i class="icon-flag"></i></th>
							{#<th style="width: 16px;"><i class="icon-file"></i></th>#}
							<th style="width: 16px;"><i class="icon-inbox"></i></th>
							<th style="width: 16px;"><i class="icon-eye-open"></i></th>
							<th style="width: 60px;">{{- ((current_folder.name == 'sent') ? 'generic.thead.to' :'generic.thead.from') | trans({}, 'CCDNMessageMessageBundle') -}}</th>
							<th>{{- 'generic.thead.subject' | trans({}, 'CCDNMessageMessageBundle') -}}</th>
							<th style="width: 140px;">{{- 'generic.thead.sent' | trans({}, 'CCDNMessageMessageBundle') -}}</th>
						</tr>
					</thead>
					<tbody>
						{%- for row, envelope in pager.getCurrentPageResults() -%}
							{%- set message = envelope.getMessage() -%}
							{%- include 'CCDNMessageMessageBundle:Folder:Item/item_message.html.twig' with {'message': message} -%}
						{%- else -%}
							<tr>
								<td colspan="8" class="center">
									{{- 'generic.message.none' | trans({}, 'CCDNMessageMessageBundle') -}}
								</td>
							</tr>
						{%- endfor -%}
					</tbody>
				</table>


				{%- if pager.haveToPaginate -%}
					<div class="btn-toolbar">
						<nav class="span12 btn-right paginate">
					    	{{- pagerfanta(pager, 'twitter_bootstrap_compact', {'routeName': 'ccdn_message_message_folder_show_paginated', 'routeParams':{'folder_name':current_folder.getName} }) -}}
						</nav>
					</div>
				{%- endif -%}

			</form>

