{
    "name": "CCDN/Sandbox",
    "description": "The \"CodeConsortium Standard Edition\" distribution",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "require": {
        "php": ">=5.3.3",
        "symfony/symfony": "2.1.*",
        "doctrine/orm": ">=2.2.3,<2.4-dev",
        "doctrine/doctrine-bundle": "1.1.*",
        "twig/extensions": "1.0.*@dev",
        "symfony/assetic-bundle": "2.1.*",
        "symfony/swiftmailer-bundle": "2.1.*",
        "symfony/monolog-bundle": "2.1.*",
        "sensio/distribution-bundle": "2.1.*",
        "sensio/framework-extra-bundle": "2.1.*",
        "sensio/generator-bundle": "2.1.*",
        "jms/security-extra-bundle": "1.2.*",
        "jms/di-extra-bundle": "1.1.*",
        "kriswallsmith/assetic": "1.1.*@dev",
        "incenteev/composer-parameter-handler": "1.0.*@dev",
        "raulfraile/ladybug-bundle": "dev-master",
        "doctrine/data-fixtures": "1.0.*@dev",
        "doctrine/doctrine-fixtures-bundle": "dev-master",
        "white-october/pagerfanta-bundle": "dev-master",
        "friendsofsymfony/user-bundle": "1.3.*",
        "codeconsortium/ccdn-component-common-bundle": "dev-2.x-dev",
		"codeconsortium/ccdn-component-bb-code": "dev-2.x-dev",
        "codeconsortium/ccdn-component-bb-code-bundle": "dev-2.x-dev",
        "codeconsortium/ccdn-component-dashboard-bundle": "dev-2.x-dev",
        "codeconsortium/ccdn-component-attachment-bundle": "dev-2.x-dev",
        "codeconsortium/ccdn-component-crumb-trail-bundle": "dev-2.x-dev",
        "codeconsortium/ccdn-user-bundle": "dev-2.x-dev",
        "codeconsortium/ccdn-user-security-bundle": "dev-2.x-dev",
        "codeconsortium/ccdn-user-profile-bundle": "dev-2.x-dev",
        "codeconsortium/ccdn-user-member-bundle": "dev-2.x-dev",
        "codeconsortium/ccdn-user-admin-bundle": "dev-2.x-dev",
		"codeconsortium/ccdn-message-bundle": "dev-2.x-dev",
        "codeconsortium/ccdn-forum-bundle": "dev-2.x-dev",
        "codeconsortium/ccdn-forum-admin-bundle": "dev-2.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "phpunit/php-code-coverage": "1.2.*"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "dev",
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "symlink",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    }
}
