{% extends 'CCDNUserProfileBundle::base.html.twig' %}

{% set LayoutTemplate = ccdn_user_profile.profile.edit.signature.layout_template %}

{% block javascripts_extra %}
	{{ parent() }}
	<script src="{{- asset('bundles/ccdnuserprofile/js/jquery.profile.js') -}}" type="text/javascript"></script>
{% endblock javascripts_extra %}

{% block title %}{{- truncDot('ccdn_user_profile.title.profile.edit' | trans({ '%user_name%': user.getUsername }, 'CCDNUserProfileBundle'), ccdn_user_profile.seo.title_length) -}}{% endblock %}

{% block sub_title %}
	<a href="{{- path('ccdn_user_profile_show_by_id', {'userId':user.id}) -}}">{{- user.getUsername |capitalize -}}</a>
{% endblock %}


{% block body_content %}

	{%- spaceless -%}

	<section>
		{%- form_theme form ccdn_user_profile.profile.edit.signature.form_theme -%}
		<form action="{{- path('ccdn_user_profile_edit_signature', {'userId':user.id}) -}}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
			<fieldset>

				<div class="control-group form-title">
					<div class="controls">
						<h3>{{- 'heading.edit.signature' |trans({}, 'CCDNUserProfileBundle') -}}</h3>
					</div>
				</div>
			
				{{- form_errors(form) -}}

				{{- form_widget(form) -}}
			
				<div class="form-actions">
					<input type="submit" class="btn btn-primary" value="{{- 'ccdn_user_profile.form.button.profile.edit.update' |trans({}, 'CCDNUserProfileBundle') -}}">
				
					<a class="btn" href="{{- path('ccdn_user_profile_show_bio_by_id', {'userId':user.id}) -}}">
						{{- 'ccdn_user_profile.form.button.profile.edit.cancel' |trans({}, 'CCDNUserProfileBundle') -}}
					</a>
				</div>

			</fieldset>
		</form>
	</section>
	
	{%- endspaceless -%}

{% endblock body_content %}
